<div id="fu-table-area" class="fu-area">
  <div id="fu-table-cards" class="fu-hud-cards"></div>
  <div class="fu-hud-controls">
    {{#if isGM}}
      <button id="fu-manual-reset" class="fu-button" title="Clean Table (Removes all cards from table)"><i class="fas fa-broom"></i></button>
    {{else}}
      {{#if hasHandCards}}
        <button id="fu-manual-reset" class="fu-button" title="Clean Table (Removes all cards from table)"><i class="fas fa-broom"></i></button>
      {{/if}}
    {{/if}}
  </div>
  
  {{!-- Separated info bar panel --}}
  <div class="fu-set-info-panel" id="fu-table-info-panel">
    <div class="fu-set-info-bar" id="fu-table-info-bar"></div>
  </div>
</div>

{{!-- Only show hand area to non-GM players who have a hand --}}
{{#unless isGM}}
  {{#if hasHandCards}}
    <div id="fu-hand-area" class="fu-area">
      {{!-- Add a clickable drawer handle --}}
      <div class="fu-drawer-handle" title="Click to keep open/close"></div>
      
      {{!-- Separated info bar panel --}}
      <div class="fu-set-info-panel" id="fu-hand-info-panel">
        <div class="fu-set-info-bar" id="fu-hand-info-bar"></div>
      </div>
      
      <div id="fu-hand-cards" class="fu-hud-cards"></div>
      <div class="fu-hud-controls">
        <button id="fu-draw-card" class="fu-button"><i class="fa-solid fa-cards-blank" title="Draw Card"></i></button>
        <button id="fu-mulligan" class="fu-button" title="Mulligan: Discard up to your skill level in cards and draw that many"><i class="fa-solid fa-arrows-retweet"></i></button>
      </div>
    </div>
  {{/if}}
{{/unless}}